{
  "name": "transfeera",
  "version": "1.0.0",
  "description": "Transfeera API",
  "main": "index.js",
  "scripts": {
    "start": "tsx src/app.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/app.js",
    "build": "tsc",
    "build:ts": "tsup --env.NODE_ENV production",
    "compile-schemas": "json2ts src/schemas -o src/types --enableConstEnums",
    "dev:memory": "cross-env NODE_ENV=development tsx watch src/app.ts",
    "dev": "cross-env REPOSITORY_TYPE=LevelRepository NODE_ENV=development tsx watch src/app.ts",
    "test": "npm run test:integration && npm run test:unit",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "test:unit": "cross-env LEVELDB_LOCATION=./tests/db/recipients.level.test NODE_ENV=test mocha --config mocharc.unit.yaml",
    "test:integration": "cross-env REPOSITORY_TYPE=MemoryRepository NODE_ENV=test mocha --config mocharc.integration.yaml",
    "populate": "tsx src/data/levelPopulate.ts"
  },
  "author": "Lucas Fellippe Alves Pereira",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.13",
    "@types/swagger-jsdoc": "^6.0.1",
    "chai": "^4.3.7",
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "fastify-tsconfig": "^1.0.1",
    "grpc-tools": "^1.12.4",
    "json-schema-to-typescript": "^12.0.0",
    "mocha": "^9.2.2",
    "sinon": "^15.0.3",
    "source-map-support": "^0.5.21",
    "ts-proto": "^1.145.0",
    "ts-protoc-gen": "^0.15.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@fastify/autoload": "^5.7.1",
    "@fastify/cors": "^8.2.1",
    "@fastify/swagger": "^8.3.1",
    "@fastify/swagger-ui": "^1.6.0",
    "@logtail/pino": "^0.4.0",
    "@sinclair/typebox": "^0.26.8",
    "ajv-keywords": "^5.1.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.15.0",
    "fastify-plugin": "^4.5.0",
    "fastify-swagger": "^5.2.0",
    "level": "^8.0.0",
    "long": "^5.2.1",
    "nice-grpc": "^2.1.3",
    "nice-grpc-common": "^2.0.1",
    "pino-pretty": "^7.6.1",
    "protobufjs": "^7.2.3",
    "swagger-jsdoc": "^6.2.8"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs"
    ],
    "target": "es2022",
    "onSuccess": "npm run copy:assets"
  }
}
