{
    "title": "Create Recepient",
    "type": "object",
    "discriminator": {
        "propertyName": "key_type"
    },
    "oneOf": [
        {
            "properties": {
                "key_type": {
                    "const": "EMAIL"
                },
                "key_value": {
                    "type": "string",
                    "pattern": "^[a-z0-9+_.-]+@[a-z0-9.-]+$"
                }
            },
            "required": [
                "key_value",
                "key_type"
            ]
        },
        {
            "properties": {
                "key_type": {
                    "const": "CPF"
                },
                "key_value": {
                    "type": "string",
                    "pattern": "^[0-9]{3}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[-]?[0-9]{2}$"
                }
            },
            "required": [
                "key_value",
                "key_type"
            ]
        },
        {
            "properties": {
                "key_type": {
                    "const": "CNPJ"
                },
                "key_value": {
                    "type": "string",
                    "pattern": "^[0-9]{2}[\\.]?[0-9]{3}[\\.]?[0-9]{3}[\/]?[0-9]{4}[-]?[0-9]{2}$"
                }
            },
            "required": [
                "key_value",
                "key_type"
            ]
        },
        {
            "properties": {
                "key_type": {
                    "const": "TELEFONE"
                },
                "key_value": {
                    "type": "string",
                    "pattern": "^((?:\\+?55)?)([1-9][0-9])(9[0-9]{8})$"
                }
            },
            "required": [
                "key_value",
                "key_type"
            ]
        },
        {
            "properties": {
                "key_type": {
                    "const": "CHAVE_ALEATORIA"
                },
                "key_value": {
                    "type": "string",
                    "regexp": {
                        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
                        "flags": "i"
                    }
                }
            },
            "required": [
                "key_value",
                "key_type"
            ]
        }
    ],
    "properties": {
        "name": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "format": "email",
            "maxLength": 250
        },
        "cpf_cnpj": {
            "type": "string",
            "pattern": "([0-9]{2}?[0-9]{3}?[0-9]{3}[\/]?[0-9]{4}[-]?[0-9]{2})|([0-9]{3}?[0-9]{3}?[0-9]{3}?[0-9]{2})"
        }
    },
    "required": [
        "name",
        "cpf_cnpj",
        "key_type",
        "key_value"
    ]
}